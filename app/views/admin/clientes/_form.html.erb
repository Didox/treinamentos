<%= form_for(@admin_cliente, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @admin_cliente.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
      <h4>Verifique os campos abaixo:</h4>

      <ul>
      <% @admin_cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :razao_social, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :razao_social, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nome_fantasia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome_fantasia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nome_responsavel, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome_responsavel, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
