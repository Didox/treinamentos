<div class="page-header">
  <%= link_to admin_clientes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_admin_cliente_path(@admin_cliente), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Detalhes Cliente</h1>
</div>

<dl class="dl-horizontal">
  <dt>Razão Social:</dt>
  <dd><%= @admin_cliente.razao_social %></dd>

  <dt>Cnpj:</dt>
  <dd><%= @admin_cliente.cnpj %></dd>

  <dt>Nome Fantasia:</dt>
  <dd><%= @admin_cliente.nome_fantasia %></dd>

  <dt>Nome Responsável:</dt>
  <dd><%= @admin_cliente.nome_responsavel %></dd>

  <dt>Email:</dt>
  <dd><%= @admin_cliente.email %></dd>

  <dt>Telefone:</dt>
  <dd><%= @admin_cliente.telefone %></dd>

  <dt>Status:</dt>
  <dd><%= @admin_cliente.status %></dd>

</dl>
<div class="page-header">
  <%= link_to new_admin_projeto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Projeto
  <% end %>
  <h1>Projetos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome projeto</th>
            <th>Responsavel projeto</th>
            <th>Email responsavel</th>
            <th>Pdv file</th>
            <th>Pdv qtd</th>
            <th>Admin cliente</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @admin_cliente.projetos) do |projeto| %>
            <td><%= projeto.nome_projeto %></td>
            <td><%= projeto.responsavel_projeto %></td>
            <td><%= projeto.email_responsavel %></td>
            <td><%= projeto.pdv %></td>
            <td><%= projeto.pdv_qtd %></td>
            <td><%= projeto.cliente %></td>
            <td><%= link_to 'Mostrar', projeto %></td>
        <td><%= link_to 'Editar', edit_admin_projeto_path(projeto) %></td>
        <td><%= link_to 'Apagar', projeto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
