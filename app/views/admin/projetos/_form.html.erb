<%= form_for(@admin_projeto, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @admin_projeto.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Verifique os campos abaixo:</h4>

      <ul>
      <% @admin_projeto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome_projeto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome_projeto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :responsavel_projeto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :responsavel_projeto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email_responsavel, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email_responsavel, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pdv, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pdv, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pdv_qtd, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :pdv_qtd, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :cliente, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cliente, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
